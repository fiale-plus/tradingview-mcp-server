{
  "name": "tradingview-mcp-server",
  "version": "0.0.0-dev",
  "description": "Unofficial MCP server for TradingView stock screener API",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "tradingview-mcp-server": "dist/index.js"
  },
  "files": [
    "dist/",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/index.ts",
    "start": "node dist/index.js",
