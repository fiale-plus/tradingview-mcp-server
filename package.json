  "repository": {
    "type": "git",
    "url": "git+https://github.com/fiale-plus/tradingview-mcp-server.git"
  },
  "bugs": {
    "url": "https://github.com/fiale-plus/tradingview-mcp-server/issues"
  },
  "homepage": "https://github.com/fiale-plus/tradingview-mcp-server#readme",
  "author": "Community",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.4",
    "node-fetch": "^3.3.2"
  },
  "devDependencies": {
    "@types/node": "^20.11.19",
    "tsx": "^4.7.1",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
