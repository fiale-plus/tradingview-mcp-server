    "test:watch": "tsx --test --watch src/tests/*.test.ts",
    "prepublishOnly": "npm run build && npm test",
    "prepare": "npm run build"
  },
  "keywords": [
    "mcp",
    "tradingview",
    "stock-screener",
    "model-context-protocol",
    "claude",
    "claude-desktop",
    "stock-analysis",
    "financial-data"
